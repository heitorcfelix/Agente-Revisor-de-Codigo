def _listar_todos_os_arquivos(repo, path="/"):
    """
    Lista todos os arquivos em um reposit√≥rio, recursivamente.

    Args:
        repo: O reposit√≥rio do GitHub a ser analisado.
        path: O caminho inicial para come√ßar a busca (padr√£o: "/").

    Returns:
        Uma lista de objetos File do GitHub representando todos os arquivos encontrados.
    """
    arquivos = []
    conteudo = repo.get_contents(path)
    while conteudo:
        arquivo = conteudo.pop(0)
        if arquivo.type == "dir":
            conteudo.extend(repo.get_contents(arquivo.path))
        else:
            arquivos.append(arquivo)
    return arquivos


